{{#simple-form onsubmit=(action "saveProfile") as |formValues|}}
  <div class="container">

    <div class="card">
      <div class="profile-view-body">
        <div class="profile-view-container">
          <div class="profile-view-top create-profile">
            <h5 class="card-title">Tell us about your family</h5>
            <div class="create-profile__main">
              <div class="upload-image">
                <div class="image-wrapper">
                  <img src="http://placekitten.com/200/200" alt="">
                </div>
                <button class="btn">Upload Photo</button>
              </div>
              <div class="form-main">
                <div class="row form-row">
                  <div class="row">
                    <div class="input-field col s6">
                      {{input type="text" class="validate" value=formValues.firstName}}
                      <label for="first_name">First Name(s)</label>
                    </div>
                    <div class="input-field col s6">
                      {{input type="text" class="validate" value=formValues.lastName}}
                      <label for="last_name">Last Name(s)</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                      {{input type="text" class="validate" value=formValues.location}}
                      <label for="name">Location</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12 phone-field">
                      {{input type="text" class="validate" value=formValues.phoneNumber}}
                      <label for="phone">Phone</label>
                      <p>
                        <input class="with-gap" id="show" type="radio" name="phone" value="show">
                        <label for="show">Show</label>
                      </p>
                      <p>
                        <input class="with-gap" id="hide" type="radio" name="phone" value="hide" checked>
                        <label for="hide">Hide</label>
                      </p>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                      {{textarea type="text" class="materialize-textarea validate" value=formValues.userBlurb}}
                      <label for="about">Brief bio that other users will see while browsing (blurb)</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                      {{textarea type="text" class="materialize-textarea validate" value=formValues.userAbout}}
                      <label for="about">Tell us more about your family and what you are looking for in a babysitter (bio)</label>
                    </div>
                  </div>
                  <div class="form-actions right-align">
                    <button class="btn waves-effect" type="clear">
                      Clear All
                    </button>
                    <button class="btn waves-effect waves-light" type="submit">
                      Submit
                    </button>
                  </div>
                </div>
              </div>
            </div>
            <div class="add-children">
              <h5>Add Child</h5>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/simple-form}}
